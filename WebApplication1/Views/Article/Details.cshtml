                            <p>
                                @if (comment.FMember != null)
                                {
                                    <span class="font-weight-bold">@ViewData["UserName"]</span>

                                }
                                else
                                {
                                    <span class="font-weight-bold">匿名會員</span>
                                }

                                <span class="text-muted">． @comment.FCommentTime</span>
                            </p>
                            <p>@comment.FCommentContent</p>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


