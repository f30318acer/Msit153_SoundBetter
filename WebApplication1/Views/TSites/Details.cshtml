@model prjMusicBetter.Models.ViewModels.SiteViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout2";
}
<style>
    dt {
        font-size: 30px;
        color: darkblue;
        font-family: 'Microsoft JhengHei UI'
    }

    dd:not(#PlacePic) {
        background-color: white;
        font-size: 20px;
        font-family: 'Microsoft JhengHei UI';
    }
</style>
<main id="main" class="main">
    <h1>詳細資訊</h1>

    <div>
        <hr />

        <dl class="row">
            <div class="col-md-6">
                <dt class="col-sm-2">
                    場地名稱
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TSite.FSiteName)
                </dd>
                <br />
                <dt class="col-sm-2">
                    電話
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TSite.FPhone)
                </dd>
                <br />
                <dt class="col-sm-2">
                    場地類型
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TSite.FSiteType)
                </dd>
                <br />
                <dt class="col-sm-2">
                    地址
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TSite.FAddress)
                </dd>
                <br />
                <dt class="col-sm-2">
                    城市
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TSite.FCity.FCity)
                </dd>
                <br />
                <dt class="col-sm-2">
                    會員
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TSite.FMember.FName)
                </dd>
            </div>
            <div class="col-md-6">
                <dt class="col-sm-2">
                    場地圖片
                </dt>
                <br />
                <dd class="col-sm-10" id="PlacePic">
                    @if (Model.TSitePicture != null)
                    {
                        var sitePicture = Model.TSitePicture;
                        <img src="@Url.Content("~/img/" + sitePicture.FPicturePath)" alt="Site Picture" style="width: 700px; height:auto" />
                    }
                    else
                    {
                        <p>No Image</p>
                    }
                </dd>
        </dl>
    </div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.TSite.FSiteId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</main>
