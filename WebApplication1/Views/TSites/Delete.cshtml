@model prjMusicBetter.Models.TSite

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout2";
}
<main id="main" class="main">
<h1>刪除場地</h1>

<h3>請問您確定要刪除此場地嗎？</h3>
<div>
    <hr />
    <dl class="row">
            <dt class="col-sm-2">
                場地名稱
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FSiteName)
            </dd>
            <br />
            <dt class="col-sm-2">
                電話
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FPhone)
            </dd>
            <br />
            <dt class="col-sm-2">
                場地類型
            </dt>
            <dd class="col-sm-10">
                @{
                    string siteTypeText = "";
                    switch (Model.FSiteType)
                    {
                        case 1:
                            siteTypeText = "錄音室";
                            break;
                        case 2:
                            siteTypeText = "音樂教室";
                            break;
                        default:
                            siteTypeText = "其他";
                            break;
                    }
                }
                @siteTypeText
            </dd>
            <br />
            <dt class="col-sm-2">
                地址
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FAddress)
            </dd>
            <br />
            <dt class="col-sm-2">
                城市
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FCity.FCity)
            </dd>
            <br />
            <dt class="col-sm-2">
                會員
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FMember.FName)
            </dd>
            <br />
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FSiteId" />
        <input type="submit" value="刪除場地" class="btn btn-danger" /> |
        <a asp-action="Index">回場地列表</a>
    </form>
</div>
</main>