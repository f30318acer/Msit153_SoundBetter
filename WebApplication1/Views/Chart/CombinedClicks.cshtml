@{
    ViewData["Title"] = "CombinedClicks";
    Layout = "~/Views/Shared/ChartLayout.cshtml";
}



<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>圖表展示</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Noto Sans SC', sans-serif;
        } 
        .chart-container {
            margin-bottom: 15rem; /* This adds space below the chart container */
        }

        .chart-card {
            padding-bottom: 2rem; /* This adds space inside the bottom of the chart card */
            /* ... your other styles ... */
        }
    </style>
</head>
<body class="bg-gray-100 p-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">圖表展示</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- 图表1的占位符 -->
        <div class="chart-container bg-white p-6 shadow-md rounded-lg mb-4 transition-shadow duration-200 hover:shadow-lg">
            <h2 class="text-xl font-semibold text-gray-700 mb-3">課程</h2>
            <div class="h-64">
                @Html.Partial("classclick")
                <!-- 在这里插入图表1的具体内容 -->
                <p class="text-center text-gray-500">點擊數分析</p>
            </div>
        </div>

        <!-- 图表2的占位符 -->
        <div class="chart-container bg-white p-6 shadow-md rounded-lg mb-4 transition-shadow duration-200 hover:shadow-lg">
            <h2 class="text-xl font-semibold text-gray-700 mb-3">作品</h2>
            <div class="h-64">
                @Html.Partial("workclick")
                <!-- 在这里插入图表2的具体内容 -->
                <p class="text-center text-gray-500">點擊數分析</p>
            </div>
        </div>
        <div class="chart-container bg-white p-6 shadow-md rounded-lg mb-4 transition-shadow duration-200 hover:shadow-lg">
            <h2 class="text-xl font-semibold text-gray-700 mb-3">專案狀態</h2>
            <div class="h-64">
                @Html.Partial("projectclick")
                <!-- 在这里插入图表2的具体内容 -->
                <p class="text-center text-gray-500">點擊數分析</p>
            </div>
        </div>
        <div class="bg-white p-6 shadow rounded-lg mb-4">
            <h2 class="text-xl font-semibold text-gray-700 mb-3">xx</h2>
            <div class="h-64">
                @Html.Partial("siteclick")
                <!-- 在这里插入图表2的具体内容 -->
                <p class="text-center text-gray-500">點擊數分析</p>
            </div>
        </div> 
        <!-- 更多图表的占位符 -->
        <!-- 复制上面的块来添加更多图表 -->
    </div>
</body>
</html>
