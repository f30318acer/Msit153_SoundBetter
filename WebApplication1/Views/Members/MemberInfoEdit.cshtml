@{
}
<form method="post" action="MemberInfoEdit" name="EditForm">
    <div class="container ">
        <input type="hidden" class="form-control" name="MemberId" value="@Model.FMemberID" />
        <div class="m-3 fs-3 fw-bold  border-bottom py-4 ">修改個人資料</div>
        <div class="p-2 ">
            <div class="row justify-content-around  p-3 ">
                <div class="pt-2 d-flex col-6 align-items-center">
                    <div class=" width-90px text-end fw-bold">姓名</div>
                    <div class="mx-2">
                        <input type="text" class="form-control" name="Name" value="@Model.FName"/>
                    </div>
                </div>
                <div class="pt-2 d-flex col-6 align-items-center">
                    <div class=" width-90px text-end fw-bold">生日</div>
                    <div class="mx-2">
                        <div class="mx-2" name="DateOfBirth" id="DateOfBirth"> @Model.FBirthday</div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-around p-3">
                <div class="pt-2 d-flex col-6 align-items-center">
                    <div class=" width-90px text-end fw-bold">信箱</div>
                    <div class="mx-2">
                        <input type="text" class="form-control" name="Email" value="@Model.FEmail">
                    </div>
                </div>
                <div class="pt-2 d-flex col-6 align-items-center">
                    <div class=" width-90px text-end fw-bold">電話</div>
                    <div class="mx-2">
                        <input type="text" class="form-control" name="Phone" value="@Model.FPhone">
                    </div>
                </div>
            </div>
            <div class="pt-2 d-flex col-6 align-items-center p-3 mt-2">
                <div class=" width-90px text-end fw-bold">性別</div>
                <div class="mx-3">
                    <div>
                       @Model.FGender
                    </div>
                </div>
            </div>
            <div class="row justify-content-around p-3">
                <div class="col-12  mt-2 d-flex justify-content-start ">
                </div>
            </div>
        </div>
        <div class="row justify-content-around p-5">
            <div class="text-center">
                <input type="submit" value="確定修改" class="btnEditConfirm btn btn-dark p-2 px-4 btnSubmit">
                @* <a href="@Url.Action("Index", "Members")" class="btn btn-dark p-2 px-4 btnEdit" data-id="4">取消</a> *@
                <input type="button" value="取消" class="btnEditCancel btn btn-light p-2 px-4 ">
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <script>
        $(".btnSubmit").on('click', async function (event) {
            event.preventDefault();

            const formData = new FormData(document.EditForm);

            const response = await fetch('@Url.Content("~/Members/MemberInfoEdit")', {
                body: formData,
                method: 'POST'
            })

            const data = await response.json();
            if (data.statusCode == 500) {
                Swal.fire({
                    title: data.statusMessage,
                    icon: 'error',
                    showConfirmButton: false,
                    timer: 1500
                })
            }
            else {
                Swal.fire(
                    {
                        title: data.statusMessage,
                        icon: 'success',
                        showConfirmButton: false,
                        timer: 1500,
                    })
                setTimeout(() => {
                    $('#divPartial').load('@Url.Content("~/Members/MemberInfo")')
                }, 1500)
            }
        })
    </script>
}