
@{
    Layout = "_Layout2";
}

<h1>修改作品</h1>


<div class="container mt-3">
    <form class="row g-3 mx-auto col-md-6">
        <div class="col-12">
            <label for="inputName4" class="form-label">作品名稱</label>
            <input type="text" class="form-control" id="inputName4">
        </div>

        <div class="col-md-4">
            <label for="inputstyle" class="form-label">風格</label>
            <select id="inputState" class="form-select">
                <option selected="">Choose...</option>
                <option>...</option>
            </select>
        </div>

        <div class="col-12">
            <label for="inputCreater" class="form-label">創作者</label>
            <input type="text" class="form-control" id="inputEmail4">
        </div>

        <div class="row mb-3">
            <label for="upload" class="form-label">上傳檔案</label>
            <div class="col-sm-10">
                <input class="form-control" type="file" id="formFile">
            </div>
        </div>

        <div class="row mb-3">
            <label for="upload" class="form-label">上傳圖片</label>
            <div class="col-sm-10">
                <input class="form-control" type="file" id="formFile">
            </div>
        </div>

        <div class="col-12">
            <label for="inputPassword" class="col-sm-2 col-form-label">作品描述</label>
            <textarea class="form-control" style="height: 100px"></textarea>
        </div>

        <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary">確認修改</button>
            <button type="submit" class="btn btn-secondary">取消修改</button>
        </div>
    </form>
</div>