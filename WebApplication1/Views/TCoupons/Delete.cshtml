@model prjMusicBetter.Models.TCoupon

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout2";
}
@* ================================================================== *@
<main id="main" class="main">
    <!-- 其他內容... -->
    <div class="pagetitle">
        <h1>刪除優惠券</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        <div class="datatable-container">
                            <table class="table">
                                <!-- 表格標題和內容... -->
                                <dl class="row">
                                    <dl class="col-md-4">
                                        <form asp-action="Delete">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label asp-for="FCouponContent" class="control-label">優惠券內容</label>
                                                <input asp-for="FCouponContent" class="form-control" />
                                                <span asp-validation-for="FCouponContent" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FCouponCode" class="control-label">優惠券代碼</label>
                                                <input asp-for="FCouponCode" class="form-control" />
                                                <span asp-validation-for="FCouponCode" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FDescription" class="control-label">描述</label>
                                                <input asp-for="FDescription" class="form-control" />
                                                <span asp-validation-for="FDescription" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FStartdate" class="control-label">開始日</label>
                                                <input asp-for="FStartdate" class="form-control" />
                                                <span asp-validation-for="FStartdate" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FStartdate" class="control-label">結束日</label>
                                                <input asp-for="FStartdate" class="form-control" />
                                                <span asp-validation-for="FStartdate" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FPicture" class="control-label">圖片</label>
                                                <input asp-for="FPicture" class="form-control" />
                                                <span asp-validation-for="FPicture" class="text-danger"></span>
                                            </div>
                                        </form>
                                    </dl>
                                </dl>
                                <hr />
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="FCouponId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" onclick="confirmDelete" />
                                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                                </form>
                            </table>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


@* ================================================================== *@

<script>
    function confirmDelete() {
        return confirm('確定要刪除嗎嗎？');
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}