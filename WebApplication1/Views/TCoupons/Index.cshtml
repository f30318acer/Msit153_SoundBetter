@model IEnumerable<prjMusicBetter.Models.TCoupon>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout2";
}



<div class="container">
    <div class="m-3 fs-3 fw-bold text-center border-bottom py-5 border-dark-subtle">優惠券管理</div>
    <div class="d-flex justify-content-between px-4">
        <div class="d-flex align-items-center gap-2">

            @Html.ActionLink("新增優惠券", "create", "TCoupons", "", new { @class = "btn btn-dark" })
        </div>
        <div class="d-flex align-items-center gap-2">

            <div class="width-50px  ">每頁顯示 : </div>
            <div>
                <select class="form-select d-inline" aria-label="資料筆數">
                    <option value="">5</option>
                    <option value="">10</option>
                    <option value="">20</option>
                </select>
            </div>
            <div class="width-50px ">筆資料</div>
        </div>

        <div class="d-flex align-items-center">
            <form asp-action="Index" method="get">
                <div class="form-group d-flex align-items-center">
                    <label for="search" class="mb-0 mx-3">搜尋關鍵字:</label>
                    <input type="text" class="form-control" id="search" name="search" placeholder="請輸入關鍵字" value="@ViewData["CurrentFilter"]" />
                    <button type="submit" class="btn btn-secondary mx-2">搜尋</button>
                </div>
            </form>
        </div>

    </div>
    <div class="container mt-4">
        <div class="border border-secondary p-2 mb-2 border-opacity-75 rounded">
            <table class="table table-striped align-middle text-center">
                <thead>
                    <tr>
                        <th>優惠內容</th>
                        <th>優惠代碼</th>
                        <th>優惠描述</th>
                        <th>優惠起始日</th>
                        <th>優惠結束日</th>
                        <th>照片</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody id="couponTable">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FCouponContent)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FCouponCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FStartdate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FEnddate)
                            </td>                           
                            <td>
                                @if (!string.IsNullOrEmpty(item.FPicture))
                                {
                                    <img src="@Url.Content("~/img/" + item.FPicture)" alt="Coupon Image" style="width:100px; height:auto;" />

                                }
                                else
                                {
                                    @:No Image
                                }
                                @Html.DisplayFor(modelItem => item.FPicture)
                            </td> 
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.FCouponId" class="btn btn-outline-success">修改</a>
                                @* <a asp-action="Details" asp-route-id="@item.FMemberId">細節</a> | *@
                                <a asp-action="Delete" asp-route-id="@item.FCouponId" class="btn btn-outline-danger">刪除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="container">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>




<main id="main" class="main">
    <!-- 其他內容... -->
    <div class="pagetitle"> 
        <p>
            <button onclick="location.href='@Url.Action("Create", "TCoupons")'" class="btn btn-primary">新增優惠券</button>
        </p>
      @*   搜尋 *@
        <form asp-action="Index" method="get">
            <div class="form-group">
                <label for="search">搜尋關鍵字:</label>
                <input type="text" class="form-control" id="search" name="search" value="@ViewData["CurrentFilter"]" />
            </div>
            <button type="submit" class="btn btn-secondary">搜尋</button>
        </form>

        <h1>優惠券清單</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                     
                        <div class="datatable-container">
                            <table class="table">
                                <!-- 表格標題和內容... -->
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FCouponContent)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FCouponCode)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FDescription)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FStartdate)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FEnddate)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FPicture)
                                            </th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FCouponContent)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FCouponCode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FDescription)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FStartdate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FEnddate)
                                                </td>
                                                @* 圖片 *@
                                                <td>
                                                    @if (!string.IsNullOrEmpty(item.FPicture))
                                                    {
                                                        <img src="@Url.Content("~/img/" + item.FPicture)" alt="Coupon Image" style="width:100px; height:auto;" />

                                                    }
                                                   @*  沒有圖片顯示No Image *@
                                                    else
                                                    {
                                                        @:No Image
                                                    }
                                                    @Html.DisplayFor(modelItem => item.FPicture)
                                                </td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.FCouponId" class="btn btn-outline-success">修改</a> 
                                                    <a asp-action="Delete" asp-route-id="@item.FCouponId" class="btn btn-outline-danger">刪除</a>
                                                   @*  <a asp-action="Details" asp-route-id="@item.FCouponId">Details</a> | *@
                                                   
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </table>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#searchButton").click(function () {
                var searchText = $("#searchText").val();
                $.ajax({
                    url: '@Url.Action("GetCoupons", "TCoupons")',
                    type: 'GET',
                    data: { search: searchText },
                    success: function (data) {
                        // 處理返回的數據
                        console.log(data);
                        // 例如，更新表格
                    },
                    error: function (error) {
                        // 處理錯誤
                        console.error("錯誤: ", error);
                    }
                });
            });
        });
    </script>

}


<input type="text" id="searchText" />
<button id="searchButton">搜尋</button>
