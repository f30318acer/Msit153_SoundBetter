        <div class="form-group">
            <label asp-for="FPhotoPath" class="control-label"></label>
            <input type="file" asp-for="FPhotoPath" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">保存</button>
    </form> *@
</main>

<script>
    function confirmCreate() {
        return confirm('確定要新增嗎？');
    }
    //一般會員登入
    $('#DemoMember').on('click', function () {
        let email = "gaytony@gmail.com"
        $('#inputEmail').val(email)
        $('#inputPassword').val("123")
    })
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
