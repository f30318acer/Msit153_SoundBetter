@model prjMusicBetter.Models.TMember

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout2";
}
<main id="main" class="main">
    <!-- 其他內容... -->
    <div class="pagetitle">
        <h1>新增會員</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">                 
                        <div class="datatable-container">
                            <table class="table">
                                <div class="row">
                                    <div class="col-md-4">
                                        <form asp-action="Create" method="post" enctype="multipart/form-data">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label asp-for="FUsername" class="control-label">使用者姓名</label>
                                                <input asp-for="FUsername" class="form-control" id="inputUsername" />
                                                <span asp-validation-for="FUsername" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FName" class="control-label">姓名</label>
                                                <input asp-for="FName" class="form-control" id="inputName" />
                                                <span asp-validation-for="FName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FPassword" class="control-label">密碼</label>
                                                <input asp-for="FPassword" class="form-control" id="inputPassword" />
                                                <span asp-validation-for="FPassword" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FPhone" class="control-label">電話</label>
                                                <input asp-for="FPhone" class="form-control" id="inputPhone" />
                                                <span asp-validation-for="FPhone" class="text-danger" ></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FEmail" class="control-label">電子信箱</label>
                                                <input asp-for="FEmail" class="form-control" id="inputEmail" />
                                                <span asp-validation-for="FEmail" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FGender" class="control-label">性別</label>
                                                <input asp-for="FGender" class="form-control" id="inputGender" />
                                                <span asp-validation-for="FGender" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FBirthday" class="control-label">生日</label>
                                                <input asp-for="FBirthday" class="form-control" />
                                                <span asp-validation-for="FBirthday" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FCreationTime" class="control-label">創立時間</label>
                                                <input asp-for="FCreationTime" class="form-control" />
                                                <span asp-validation-for="FCreationTime" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FIntroduction" class="control-label">自我介紹</label>
                                                <input asp-for="FIntroduction" class="form-control" />
                                                <span asp-validation-for="FIntroduction" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="FPermissionId" class="control-label">等級</label>
                                                <select asp-for="FPermissionId" class="form-control" asp-items="ViewBag.FPermissionId"></select>
                                            </div>

                                            <!-- 圖片上傳 -->
                                            <div class="form-group">
                                                <label asp-for="FPhotoPath" class="control-label">照片</label>
                                                <input type="file" name="uploadedFile" class="form-control" /> <!-- 新增的文件上傳字段 -->
                                                <span asp-validation-for="FPhotoPath" class="text-danger"></span>
                                            </div>
                                            <br />
                                            <!-- 提交按鈕 -->
                                            <div class="form-group">
                                                <input type="submit" value="確定新增" class="btn btn-primary" onclick="confirmCreate();" />
                                                <a asp-action="Index" class="btn btn-primary">首頁</a>
                                            </div>
                                            <input type="button" class="btn btn-outline-dark" value="Demo" id="DemoMember" />

                                        </form>
                                    </div>
                                </div>
                            </table>
                        </div>                    
                    </div>
                </div>
            </div>
        </div>
    </section>
