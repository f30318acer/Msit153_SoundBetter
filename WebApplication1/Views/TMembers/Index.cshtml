@model IEnumerable<prjMusicBetter.Models.TMember>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout2";
}


<div class="container">
    <div class="m-3 fs-3 fw-bold text-center border-bottom py-5 border-dark-subtle">會員管理</div>
    <div class="d-flex justify-content-between px-4">
        <div class="d-flex align-items-center gap-2">

            @Html.ActionLink("新增會員", "create", "TMembers", "", new { @class = "btn btn-dark" })
        </div>
        <div class="d-flex align-items-center gap-2">

            <div class="width-90px  ">每頁顯示 : </div>
            <div>
                <select class="form-select d-inline" aria-label="資料筆數">
                    <option value="">10</option>
                    <option value="">20</option>
                    <option value="">30</option>
                </select>
            </div>
            <div class="width-50px ">筆資料</div>
        </div>

        <div class="d-flex align-items-center">
            <form asp-action="Index" method="get">
                <div class="form-group d-flex align-items-center">
                    <label for="search" class="mb-0 mx-3">搜尋關鍵字:</label>
                    <input type="text" class="form-control" id="search" name="search" placeholder="請輸入關鍵字" value="@ViewData["CurrentFilter"]" />
                    <button type="submit" class="btn btn-secondary mx-2">搜尋</button>
                </div>
            </form>
        </div>

    </div>
    <div class="container mt-4">
        <div class="border border-secondary p-2 mb-2 border-opacity-75 rounded">
            <table class="table table-striped align-middle text-center">
                <thead>
                    <tr>
                        <th>使用者姓名</th>
                        <th>姓名</th>
                        <th>密碼</th>
                        <th>電話號碼</th>
                        <th>信箱</th>
                        <th>性別</th>
                        <th>生日</th>
                        <th>建立時間</th>
                        <th>自我介紹</th>
                        <th>照片</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody id="memberTable">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FUsername)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FPassword)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FPhone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FGender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FBirthday)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FCreationTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FIntroduction)
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.FPhotoPath))
                                {
                                    <img src="@Url.Content("~/img/Member/" + item.FPhotoPath)" alt="Member Image" style="width:100px; height:auto;" />

                                }
                                else
                                {
                                    @:No Image
                                }
                               
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.FPermission)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.FMemberId" class="btn btn-outline-success">修改</a>
                                @* <a asp-action="Details" asp-route-id="@item.FMemberId">細節</a> | *@
                                <a asp-action="Delete" asp-route-id="@item.FMemberId" class="btn btn-outline-danger">刪除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="container">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>



<!-- End #main -->
