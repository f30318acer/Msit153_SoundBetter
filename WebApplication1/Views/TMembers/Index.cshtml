@model IEnumerable<prjMusicBetter.Models.TMember>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout2";
}

    <div class="container mt-4">
        <div class="border border-secondary p-2 mb-2 border-opacity-75 rounded">
            <table class="table table-striped align-middle text-center">
                <thead>
                    <tr>
                        <th>編號</th>
                        <th>頭像</th>
                        <th>姓名</th>
                        <th>電話號碼</th>
                        <th>信箱</th>
                        <th>生日</th>
                        <th>性別</th>
                        <th>會員等級</th>
                        <th>編輯</th>
                        <th>刪除</th>
                        <th>寄信</th>
                    </tr>
                </thead>
                <tbody id="memberTable">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FUserame)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FPasswod)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FPhone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FGender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FBirthday)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FCreationTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FIntroduction)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FPhotoPath)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FPermission.FPromissionId)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.FMemberId" class="btn btn-outline-success">修改</a>
                                @* <a asp-action="Details" asp-route-id="@item.FMemberId">細節</a> | *@
                                <a asp-action="Delete" asp-route-id="@item.FMemberId" class="btn btn-outline-danger">刪除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="container">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>






