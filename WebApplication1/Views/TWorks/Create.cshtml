                <input asp-for="FWorkName" class="form-control" />
                <span asp-validation-for="FWorkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FStyleId" class="control-label"></label>
                <select asp-for="FStyleId" class="form-control" asp-items="ViewBag.FStyleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FUpdateTime" class="control-label"></label>
