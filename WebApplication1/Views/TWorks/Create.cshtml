                <input asp-for="FThumbnail" class="form-control" />
                <span asp-validation-for="FThumbnail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FFilePath" class="control-label"></label>
                <input asp-for="FFilePath" class="form-control" />
                <span asp-validation-for="FFilePath" class="text-danger"></span>
            </div>
            <div class="form-group">


                @*<label asp-for="File" class="control-label"></label>*@
                <input type="file" name="File" class="form-control" />

