<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-type" content="text/html;charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="shortcut icon" />

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i&display=swap" rel="stylesheet">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/css/slicknav.min.css" />

    <!-- Main Stylesheets -->
    <link rel="stylesheet" href="~/css/style.css" />

    @await RenderSectionAsync("Styles", required: false)

    <script src="~/js/jquery-3.2.1.min.js"></script>
</head>

<body>
    <!-- Header section -->
    <header class="sticky-top">
        <nav class="navbar shadow navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark  box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-white d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="nav-logo">
                        <h2 style="color:#fc0254" ">Sound</h2>
                    </div>
                    <div class="nav-logo-en">
                        <h2 style="color:white" ">Better</h2>
                    </div>
                </a>
                <button class="navbar-toggler bg-black" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-3">
                        <li class="nav-item">
                            <a class="nav-text nav-link text-white" href="@Url.Content("~/Project/List")">找製作</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white nav-text" href="@Url.Content("~/Home/Vision")">視覺效果</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white nav-text" href="@Url.Content("~/Class/Index")">找課程</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white nav-text" asp-area="" asp-controller="Place" asp-action="Place">找場地</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white nav-text" asp-area="" asp-controller="Article" asp-action="List">音樂專區</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-2 mx-3">
                        <div class="d-flex align-items-center gap-2 p-1 bg-white rounded-3 mx-2">
                            <div class="width-170px">
                                <input type="text" class="form-control border-0" id="inputKeyword" placeholder="請輸入關鍵字" />
                            </div>
                            <div class="divKeyword cursor-pointer">
                                <div class="width-30px">
                                    <img src="~/img/header/loupe.png" width="20px" />
                                </div>
                            </div>
                        </div>
                        <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown" id="memberIcon">
                                    <button class="btn btn-dark" data-bs-toggle="dropdown">
                                        <img src="~/img/header/user.png" class="circle-size-35" width="15px" />
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-dark" id="empList">
                                        <li class="d-flex align-items-center mx-2">
                                            <img src="/img/icons/help_icon.png" class="width-16px" width="15px  />
                                            <a class="dropdown-item fs-12px" href="#">幫助中心</a>
                                        </li>
                                        <li class="d-flex align-items-center mx-2">
                                            <img src="/img/icons/login.png" class="width-16px" width="15px" />
                                            <a class="dropdown-item fs-12px" asp-action="Login" asp-controller="Home">登入/註冊</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="nav-icon mx-3">
                            @*   <a class="position-relative" id="collectItems" href="@Url.Content("~/fmember/index?display=MemberMyKeep")">
                            <img src="~/img/header/like.png" width="15"/>
                            </a> *@
                        </div>
                        <a asp-action="index" asp-controller="ShoppingCart" class="nav-icon mx-3 position-relative" id="cartItems">
                            <img src="~/img/header/shopping-cart.png" width="15" />
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Header section end -->
    @RenderBody()
    <!-- Footer section -->
    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-xl-6 col-lg-7 order-lg-2">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="footer-widget">
                                @* <h2>關於我們</h2> *@
                                <ul>
                                    <li><a href="@Url.Action("aboutUS","Home")">創立故事</a></li>
                                    <li><a href="@Url.Action("List","Article")">文章分享</a></li>
                                    <li><a href="@Url.Action("List","Article")">音樂故事</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="footer-widget">
                                @* <h2>常見問題</h2> *@
                                <ul>
                                    <li><a href="@Url.Action("aboutUS","Home")">關於我們</a></li>
                                    <li><a href="@Url.Action("FAQ","Home")">常見問題</a></li>
                                    <li><a href="@Url.Action("Index","Class")">課程專區</a></li>
                                    <li><a href="@Url.Action("contactUS","Home")">聯絡我們</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="footer-widget">
                                @* <h2></h2> *@
                                <ul>
                                    <li><a href="@Url.Action("JoinUS","Home")">加入我們</a></li>
                                    <li><a href="@Url.Action("Partner","Home")">合作夥伴</a></li>
                                    <li><a href="@Url.Action("TermOfTeacher","Home")">教學條款</a></li>
                                    <li><a href="@Url.Action("Term","Home")">服務條款</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-5 order-lg-1">
                    @* <img src="img/logo.png" alt=""> *@
                    <a href="@Url.Action("index","Home")" class="site-logo">
                        <h2 style="color:#fc0254">Sound</h2>
                        <h3 style="color:white">Better</h3>
                    </a>
                    <div class="copyright">                       
                        Copyright &copy;<script>document.write(new Date().getFullYear());</script> 版權所有 | SoundBetter音樂工作室 All Rights Reserved. <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href=" " target="_blank">MSIT153</a>                       
                    </div>
                    <div class="社群網站">
                        <a href=""><i class="fa fa-instagram"></i></a>
                        <a href=""><i class="fa fa-pinterest"></i></a>
                        <a href=""><i class="fa fa-facebook"></i></a>
                        <a href=""><i class="fa fa-twitter"></i></a>
                        <a href=""><i class="fa fa-youtube"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer section end -->
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.slicknav.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/mixitup.min.js"></script>
    <script src="~/js/main.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

<script>

 AOS.init();

 CheckLogin()

    async function CheckLogin()
    {
        const response = await fetch(`@Url.Content("~/apiHome/IsLogin")`)
        const isLogin  = await response.json();
        if(isLogin){
                    const response = await fetch(`@Url.Content("~/apiHome/UpdateNav")`)
                    const dto = await response.json();
                    const{datas,role}=dto;

                    if(role =="Member"){
                        let str ="";
                    str+= `<ul class="navbar-nav">
                        <li class="nav-item dropdown" id="memberIcon">
                            <button class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"> `;
                        if (datas.photoPath != null)
                        {
                           str += `<img src="@Url.Content("~/img/Member/")${datas.photoPath}" class="circle-size-35" />`
                        }
                         else
                         {
                           str += `<img src="@Url.Content("~/img/header/user.png")" class="circle-size-35" />`

                         }
                         str += `</button>
                                   <ul class="dropdown-menu dropdown-menu-dark">
                                       <li class="d-flex align-items-center mx-2">
                                           <img src="@Url.Content("~/images/header/user.png")" class="width-16px" />
                                                <a class="dropdown-item fs-12px" href="@Url.Content("~/fmember/index?display=MemberInfo")">會員資料</a>
                                        </li>
                                   <li class="d-flex align-items-center mx-2">
                                           <img src="@Url.Content("~/images/background/shopping-list.png")" class="width-16px" />
                                                  <a class="dropdown-item fs-12px" href="@Url.Content("~/fmember/index?display=MemberOrder")">訂單查詢</a>
                                   </li>
                                   <li class="d-flex align-items-center mx-2">
                                           <img src="@Url.Content("~/images/header/like.png")" class="width-16px" />
                                                  <a class="dropdown-item fs-12px" href="@Url.Content("~/fmember/index?display=MemberMyKeep")">我的收藏</a>
                                   </li>
                                   <li class="d-flex align-items-center mx-2">
                                           <img src="@Url.Content("~/images/icon/logout.png")" class="width-16px" />
                                                  <a class="dropdown-item fs-12px" href="@Url.Content("~/Home/Logout")">會員登出</a>
                                              </li>
                                          </ul>
                                      </li>
                                 </ul>`;
                                            $("#memberIcon").html(str)
                                            GetCartItems()
                                            GetCollectItems()
                                        } else {
                                            let str = "";
                                            str += `<ul class="navbar-nav">
                                                                                <li class="nav-item dropdown" id="memberIcon">
                                                                                    <button class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">`;
                                            if (datas.photoPath != null) {
                                                str += `<img src="@Url.Content("~/images/uploads/Employee/")${datas.photoPath}" class="circle-size-35" />`
                                            }
                                            else {
                                                str += `<img src="@Url.Content("~/images/header/user.png")" class="circle-size-35" />`

                                            }
                                            str += `</button>
                                                                            <ul class="dropdown-menu dropdown-menu-dark">
                                                                                <li class="d-flex align-items-center mx-2">
                                                                                    <img src="@Url.Content("~/images/header/user.png")" class="width-16px" />
                                                                                    <a class="dropdown-item fs-12px" href="@Url.Content("~/home/backgroundindex")">後臺管理</a>
                                                                                </li>
                                                                                <li class="d-flex align-items-center mx-2">
                                                                                    <img src="@Url.Content("~/images/icon/logout.png")" class="width-16px" />
                                                                                    <a class="dropdown-item fs-12px" href="@Url.Content("~/Home/Logout")">會員登出</a>
                                                                                </li>
                                                                            </ul>
                                                                        </li>
                                                                    </ul>`;

                                            $("#memberIcon").html(str)
                                        }
                                    }
                                }
                   }
        }
    }
</script>  
@await RenderSectionAsync("Scripts", required: false)
                
</body>

</html>
