            @*音樂專區*@
            <li>
                <a href="#">音樂專區</a>
                <ul class="sub-menu">
                    <li class="nav-item">   
                    </li>    
                    @*<li><a href="playlist.html">專案專區</a></li>*@
                    @*<li><a href="contact.html">社群討論</a></li>*@
                    <li><a asp-area="" asp-controller="blog" asp-action="List">Blog</a></li>
                   @* <li><a href="contact.html">音樂專區</a></li>*@
                    <li><a asp-area="" asp-controller="MusicShare" asp-action="List">音樂專區</a></li>

                </ul>
            </li>
            @*會員資訊*@
            <li>
                <a href="blog.html">會員資訊</a>
                <ul class="sub-menu">
                    <li class="nav-item">
                      
                        <a href="@Url.Content("~/Members/Profile1")" class="btn btn-light">會員簡介</a>

                        <a href="@Url.Content("~/Members/ProfileEdit")" class="btn btn-light">修改個人資料</a>

                        <a href="@Url.Content("~/Members/Memberclass")" class="btn btn-light">課程管理</a>
                    </li>
                </ul>
               
            </li>
            <a asp-action="List" asp-controller="ShoppingCart" class="nav-icon mx-3 position-relative" id="cartItems">
                <img src="~/img/header/shopping-cart.png" width="50px" class="shopping-cart-icon"/>
            </a>
        </ul>
    </header>
    <!-- Header section end --> 
    @RenderBody() 
    <!-- Footer section -->
