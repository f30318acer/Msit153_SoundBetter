
@{
    ViewData["Title"] = "ForgetPwd";
}

<h1>忘記密碼</h1>

<div id="VuePage">
    <!--使用 Bootstrap 設計表單-->
    <div class="panel panel-primary">
        <div class="panel-heading"></div>
        <div class="panel-body">
            <div class="form-group">
                <label>請輸入您註冊時的Email</label>
                <input type="text" class="form-control" placeholder="請輸入Email" id="inputEmail">
            </div>
        </div>
        <div class="panel-footer">
            <button type="button" class="btn btn-primary" onclick="compareEmail()">寄送驗證碼</button>
        </div>
    </div>

    <!--使用 Bootstrap Modal 樣式，當執行有錯誤時，顯示錯誤訊息-->
    <div class="modal fade" id="ErrorAlert" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">錯誤訊息</h4>
                </div>
                <div class="modal-body" id="ErrorMsg" style="overflow-x:auto;width:100%;">
                </div>
            </div>
        </div>
    </div><!-- /.modal -->
</div>
@section scripts{
    <script>
        function compareEmail() {
            var inputEmailValue = $('#inputEmail').val();

            $.getJSON('/Home/ForgetPwdMember', function (datas) {
                let match = false;
                $.each(datas, function (index, item) {
                    if (item.fEmail === inputEmailValue) {
                        match = true;
                        return false;
                    }
                });

                if (match) {
                    alert('Email 與 JSON 數據中的至少一個會員相匹配');
                } else {
                    alert('在 JSON 數據中找不到該郵件地址');
                }
            });

        }
