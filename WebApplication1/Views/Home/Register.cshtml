@model prjMusicBetter.Models.ViewModels.FMemberVM
@{
    ViewData["Title"] = "Login";
}

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold @*mb-5*@ mx-1 mx-md-4 mt-4">Register</p>
                                <form method="post" enctype="multipart/form-data"class="mx-1 mx-md-4">

                                    <div class="photo-button mb-3">
                                        <div class="photo-card mb-2 d-flex justify-content-center">
                                            <div class="photo">
                                                <img src="~/img/Member/default.jpg" class="circle-size-300"id="imgMember">
                                                <input type="file" name="Photo"id="form-control"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class=" width-50px  fw-bold">使用者姓名</div>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="fUsername" name="fUsername" class="form-control" placeholder="請輸入使用者姓名" />
                                            @Html.ValidationMessageFor(member => member.fUsername, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class=" width-50px  fw-bold">姓名</div>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="fName" name="fName" class="form-control" placeholder="請輸入姓名" />
                                            @Html.ValidationMessageFor(member=>member.fName,"",new{@class="text-danger"})
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class=" width-50px  fw-bold">電子信箱</div>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="email" id="fEmail" name="fEmail" class="form-control" placeholder="請輸入電子郵箱" />
                                            @Html.ValidationMessageFor(member=>member.fEmail,"",new{@class="text-danger"})
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class=" width-50px  fw-bold">電話</div>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="fPhone" name="fPhone" class="form-control" placeholder="請輸入電話" />
                                            @Html.ValidationMessageFor(member => member.fPhone, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class=" width-50px  fw-bold">密碼</div>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" id="fPassword" name="fPassword" class="form-control" placeholder="請輸入密碼" />
                                            @Html.ValidationMessageFor(member=>member.fPassword,"",new{@class="text-danger"})
                                        </div>
                                    </div>
                                  @*   <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class=" width-50px  fw-bold">確定密碼</div>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" id="ComfirmPassword" name="ComfirmPassword" class="form-control" placeholder="請重新輸入密碼" />
                                            <span asp-validation-for="ComfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div> *@
                                    <div class="pt-2 d-flex align-items-baseline">
                                        <div class=" width-50px  fw-bold">性別</div>
                                        <div class="mx-3 d-flex">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="fGender" id="genderFalse" value="False" checked>
                                                <label class="form-check-label" for="genderFalse">
                                                    男
                                                </label>
                                            </div>
                                            <div class="form-check ">
                                                <input class="form-check-input" type="radio" name="fGender" id="genderTrue" value="True">
                                                <label class="form-check-label" for="genderTrue">
                                                    女
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="pt-2 d-flex col-6 align-items-center">
                                        <div class=" width-50px  fw-bold">生日</div>
                                        <div class="mx-3 d-flex">
                                            <input type="date" class="form-control" value="" name="fBirthday" id="fBirthday" />
                                            @Html.ValidationMessageFor(member=>member.fBirthday,"",new{@class="text-danger"})
                                        </div>
                                    </div>
                                    <div class="container">
                                        <input type="checkbox" id="showPassword"> 顯示密碼
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="d-flex justify-content-between p-2">
                                            <div class="p-2">
                                            </div>
                                            <div class="p-2">
                                                <input type="button" class="btn btn-outline-secondary" value="Demo" id="Demo" />
                                                <input type="submit" value="註冊" id="Login" class="btn btn-dark fw-bold">
                                                @Html.ActionLink("取消", "Login", "Home", "", new { @class = "btn btn-outline-dark fw-bold" })
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                @*class="img-fluid"*@ alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles
{
    <style>
        .vh-100 {
            background: url('@Url.Content("~/assets/img/background/rain.jpg")') no-repeat center center fixed;
            background-size: cover;
        }

        .card {
            background: rgba(255, 255, 255, 0.3); /* 半透明背景 */
            border-radius: 15px; /* 边框圆角 */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 盒子阴影 */
        }

        .btn-dark btn-outline-dark btn btn-outline-secondary {
            background-color: #000; /* 按钮背景颜色 */
            border-radius: 10px; /* 按钮的边框圆角 */
            color: #fff; /* 按钮文字颜色 */
            padding: 10px 20px; /* 按钮内边距 */
            font-size: 16px; /* 文字大小 */
            border: none; /* 去除边框 */
        }

        .form-control {
            border-radius: 10px; /* 输入框的边框圆角 */
            border: 1px solid #ccc; /* 输入框边框 */
            padding: 15px; /* 输入框内边距 */
        }

        #img1 {
            display: none;
        }

        .custom-form-container {
            max-width: 600px; /* 或者您希望的任何數值 */
            margin: auto; /* 這將會使得表單在頁面中間 */
        }

        p {
            color: black;
        }
    </style>
}


@section Scripts{
    <script>
        const photo = document.querySelector('#photo')

        photo.addEventListener('change', () => {
            const file =photo.files
            if (file.length == 0) {
                let imgDefault = '@Url.Content("~/img/Member/default.jpg")'
                $('#imgMember').attr('src', imgDefault)
            }
            else {
                const url = URL.createObjectURL(file[0]);
                $('#imgMember').attr('src',url)
            }
        })
