
@model prjMusicBetter.Models.ViewModels.CommentListViewModel



<!DOCTYPE html>

@{
    ViewData["Title"] = "List";
    Layout = "_Layout2";
}
<style>
    dt {
        font-size: 30px;
        color: darkblue;
        font-family: 'Microsoft JhengHei UI'
    }

    dd:not(#PlacePic) {
        background-color: white;
        font-size: 20px;
        font-family: 'Microsoft JhengHei UI';
    }
</style>

<html>


<head>
    <meta name="viewport" content="width=device-width" />
    <title>文章評論留言管理</title>
</head>
<main id="main" class="main">

    <h2>管理留言介面</h2>
    @using (Html.BeginForm("List", "Comment", FormMethod.Get))
    {
        <label for="articleId">文章編號:</label>
        <input type="text" name="articleId" id="articleId" />

        <button type="submit">查詢</button>
    }

    <table class="table">
        <thead>
            <tr>
                <th>
                    序
                </th>
                <th>
                    文章編號
                </th>
                <th>
                    評論者ID
                </th>
                <th>
                    評論內容
                </th>
                <th>
                    評論時間
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                for (var index = 0; index < Model.Comments.Count; index++)
                {

                    <tr>
                        <td>
                            @(index + 1)
                        </td>
                        <td>
                            @Model.Comments[index].FArticleId
                        </td>
                        <td>
                            @Model.Comments[index].FMember.FName
                        </td>
                        <td>
                            @Model.Comments[index].FCommentContent
                        </td>
                        <td>
                            @Model.Comments[index].FCommentTime.Value.ToString("yyyy/MM/dd HH:mm")
                        </td>
                        <td>
                            @Html.ActionLink("刪除", "Delete", "Comment", new { commentId = Model.Comments[index].FCommentId, articleId = Model.Comments[index].FArticleId },
                                 new { onclick = "return confirm('確定要刪除嗎?')" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @* <a href="@Url.Action("Create","Comment")"><button class="btn btn-primary" type="button">加入留言</button></a> *@
</main>







