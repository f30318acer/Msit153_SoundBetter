
@{
    ViewData["Title"] = "Createclass";
}
<style>
    .btm {
        height: 60px;
        min-width: 167px;
        right: 0;
        top: 0;
        border: none;
        border-radius: 80px;
        color: #fff;
        font-size: 15px;
        background: #fc0254;
        text-align: center;
        clear: both;
    }
</style>
<!-- Contact section -->
<section class="contact-section">
    <div class="container-fluid">
        <div class="contact-warp">
            <div class="section-title mb-0">
                <h2>新建課程</h2>
            </div>
            <form class="contact-from col-lg-8">
                <div class="row">
                    <div class="col-md-6">
                        <label for="CourseName">課程名稱:</label>
                        <input type="text" id="CourseName" name="CourseName" required />
                    </div>
                    <div class="col-md-6">
                        <label for="Price">單堂價格:</label>
                        <input type="number" id="Price" name="Price" required />
                    </div>
                    <div class="col-md-12">
                        <label for="CourseDescription">課程說明:</label>
                        <textarea id="CourseDescription" name="CourseDescription" required></textarea>
                        <label for="TimeSlot">日期:</label>
                        <input type="text" id="TimeSlot" name="TimeSlot" required />
                        <label for="CourseImage">圖片:</label>
                        <input type="file" id="CourseImage" name="CourseImage" accept="image/*" />
                        <button type="submit" class="btm">確定建立</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Contact end -->